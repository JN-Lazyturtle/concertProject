{% extends "base.html.twig" %}

{% block page_title %}
    <h1  class="display-4 m-2">Archives : Concerts</h1>
{% endblock %}

{% block page_content %}

    {% set minimumYear = 2020 %}
    {% set currentYear = "now"|date("Y") %}

    {% for year in (currentYear)..minimumYear %}
        <div>
            <h3>{{ year }}</h3>
            <div class="inline">
                <div class="row mx-auto col">
                    {% for concert in concertList %}
                        {% if concert.getDateC()|date('Y') == year %}
                            <div class="card m-3 text-center" style="width: 18rem;">

                                <img class="card-img-top" src="{{ concert.getArtists().first().getPictureA().getUrl() }}" alt="Card image cap">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">{{ concert.getDateC()|date('d-m-Y H:i') }}</h5>
                                    <p></p>
                                    {% for artist in concert.getArtists() %}
                                        <h5 class="card-title"> {{ artist.getNameA() }}</h5>
                                    {% endfor %}

                                    <a href="{{ path('concert_details', {id: concert.id}) }}" class="btn btn-primary mt-auto mx-auto">DÃ©tails</a>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>

    {% endfor %}


{% endblock %}