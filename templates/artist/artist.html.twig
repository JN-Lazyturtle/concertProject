{% extends "base.html.twig" %}

{% block page_title %}
    <h1>{{ artist.getNameA() }}</h1>
{% endblock %}

{% block page_content %}
    <img src="{{ artist.getPictureA().getUrl() }}">
    <div>

        {{ artist.getSummaryA() }}

        {% for concert in artist.getConcerts() %}
        {{ concert.getDateC()|date('d-m-Y H:i') }}
        {% endfor %}
    </div>


    <style>
        img{
            max-width: 20%;
        }
    </style>

{% endblock %}