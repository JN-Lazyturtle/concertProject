{% extends "base.html.twig" %}

{% block page_title %}
    <h1  class="display-4 m-2">Artistes</h1>
{% endblock %}

{% block page_content %}

<div class="inline">
    <div class="row mx-auto col">
        {% for artist in artistList %}
            <div class="card m-3 text-center" style="width: 18rem;">
                <img class="card-img-top" src="{{ artist.getPictureA().getUrl() }}" alt="Card image cap">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">{{ artist.getNameA() }}</h5>
                    <a href="https://webinfo.iutmontp.univ-montp2.fr/~NUSSBAUMERJ/concertProject/public/artists/{{ artist.getId() }}" class="btn btn-primary mt-auto mx-auto">Fiche artiste</a>
                </div>
            </div>
        {% endfor %}
    </div>
    </div>

{% endblock %}